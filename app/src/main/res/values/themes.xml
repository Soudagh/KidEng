<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/background_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#E5E2CA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/teal_700</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">59dp</item>
        <item name="backgroundTint">#E5E2CA</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MyText">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.MyProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplicationTet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplicationTet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1D7D2"
    tools:context=".fragments.GameStartFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_answers_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/right_answers_tv"
            android:layout_gravity="top"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/right_counter_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="0"
            android:layout_gravity="top"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wrong_answers_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/wrong_answers_tv"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/wrong_counter_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="0"
            android:layout_gravity="top"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_questions_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/total_questions_tv"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_counter_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="0"
            android:layout_gravity="top"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        app:maxImageSize="36dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"/>




</FrameLayout>
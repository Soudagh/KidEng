<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1D7D2"
    tools:context=".ui.fragments.game.GameStartFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_answers_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/right_answers_tv"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/right_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyText"
            android:textSize="25sp"
            android:text=""
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wrong_answers_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/wrong_answers_tv"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/wrong_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyText"
            android:textSize="25sp"
            android:text=""
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/total_questions_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:text="@string/total_questions_tv"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/total_counter_tv"
            style="@style/MyText"
            android:textSize="25sp"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#FF008577">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/changeMode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF008577"
                    android:elevation="0dp"
                    android:src="@drawable/change"
                    app:elevation="0dp"
                    app:maxImageSize="48dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/again_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF008577"
                    android:elevation="0dp"
                    android:src="@drawable/again"
                    app:elevation="0dp"
                    app:maxImageSize="48dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/home_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF008577"
                    android:elevation="0dp"
                    android:src="@drawable/home"
                    app:elevation="0dp"
                    app:maxImageSize="48dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>